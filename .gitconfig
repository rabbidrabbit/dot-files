[user]
	name = Jonathan Laver
    email = jonathan.laver@gmail.com
[color]
    branch = auto
    diff = auto
    status = auto
	ui = 1

[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green

[color "diff"]
    meta = yellow bold
    frag = magenta bold
    old = red bold
    new = green bold

[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[giggle]
	main-window-maximized = true
	main-window-geometry = 0x0+0+0
	history-view-vpane-position = 335
	main-window-view = HistoryView
	file-view-vpane-position = 666
[log]
	date = local
[core]
	autocrlf = input
[help]
	autocorrect = 1
[rerere]
	enabled = 1
